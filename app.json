{
    "id": "be.geekness.tado",
    "name": {
        "en": "Tado"
    },
    "version": "0.5.7",
    "compatibility": ">=0.8 || 1.x",
    "author": {
        "name": "HellHound"
    },
    "description": {
        "en": "The Smart Thermostat for your Heating System"
    },
    "category": "climate",
    "images": {
        "large": "assets/images/large.jpg",
        "small": "assets/images/small.jpg"
    },
    "drivers": [
        {
            "id": "tado",
            "name": {
                "en": "Tado"
            },
            "class": "thermostat",
            "capabilities": [ "target_temperature", 
			     "measure_temperature",
			     "measure_humidity"
			    ],
            "images": {
                "large": "drivers/tado/assets/images/large.png",
                "small": "drivers/tado/assets/images/small.png"
            },
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_tado"
                    }
                },
                {
                    "id": "add_tado",
                    "template": "add_devices"
                }
            ]
        }
    ],
    "flow": {
        "triggers": [
            {
                "id": "outside_temperature",
                "title": {
                    "en": "Outside temp changed",
					"nl": "Buiten temperatuur is gewijzigd"
                },
                "tokens": [
                    {
                        "name": "temperature",
                        "title": {
                            "en": "temp"
                        },
                        "example": {
                            "en": "18"
                        }
                    }
                ]
            },
            {
                "id": "solar_intensity",
                "title": {
                    "en": "Solar intensity changed",
					"nl": "Intensiteit zon is gewijzigd"
                },
                "tokens": [
                    {
                        "name": "intensity",
                        "title": {
                            "en": "intensity (%)",
							"nl": "intensiteit (%)"
                        },
                        "example": {
                            "en": "50"
                        }
                    }
                ]
            },
            {
                "id": "weather",
                "title": {
                    "en": "Weather changed",
					"nl": "Weerstoestand is gewijzigd"
                },
                "tokens": [
                    {
                        "name": "state",
                        "title": {
                            "en": "state",
							"nl": "toestand"
                        },
                        "example": {
                            "en": "SUN, RAIN, <unknown>"
                        }
                    }
                ]
            },
            {
                "id": "weather_state",
                "title": {
                    "en": "Weather state changed to",
					"nl": "Weerstoestand is gewijzigd naar"
                },
                "tokens": [
                    {
                        "name": "state",
                        "title": {
                            "en": "state",
							"nl": "toestand"
                        },
                        "example": {
                            "en": "SUN, RAIN, <unknown>"
                        }
                    }
                ],
                "args": [
                    {
                        "name": "current_state",
                        "type": "dropdown",
                        "values": [ 
                            { "id": "CLEAR", "label": { "en": "Clear (Night)" } },
                            { "id": "NIGHT_CLOUDY", "label": { "en": "Cloudy (Night)" } },
                            { "id": "CLOUDY_PARTLY", "label": { "en": "Cloudy (Partly)" } },
                            { "id": "RAIN", "label": { "en": "Raining" } },
                            { "id": "SCATTERED_RAIN", "label": { "en": "Scattered Rain" } },
                            { "id": "THUNDERSTORMS", "label": { "en": "Storming" } },
                            { "id": "SUN", "label": { "en": "Sunny" } },
                            { "id": "WINDY", "label": { "en": "Windy" } }
                        ]
                    }
                ]
            },
            {
                "id": "humidity",
                "title": {
                    "en": "Humidity changed",
					"nl": "Luchtvochtigheid is gewijzigd"
                },
                "tokens": [
                    {
                        "name": "percent",
                        "title": {
                            "en": "Humidity (%)"
                        },
                        "example": {
                            "en": "37"
                        }
                    }
                ]
            }
        ],
        "conditions": [
            {
                "id": "weather_state",
                "title": {
                    "en": "Weather state !{{is|is not}}",
					"nl": "Weerstoestand !{{is|is niet}}"
                },
                "args": [
                    {
                        "name": "current_state",
                        "type": "dropdown",
                        "values": [ 
                            { "id": "CLEAR", "label": { "en": "Clear (Night)" } },
                            { "id": "NIGHT_CLOUDY", "label": { "en": "Cloudy (Night)" } },
                            { "id": "CLOUDY_PARTLY", "label": { "en": "Cloudy (Partly)" } },
                            { "id": "RAIN", "label": { "en": "Raining" } },
                            { "id": "SCATTERED_RAIN", "label": { "en": "Scattered Rain" } },
                            { "id": "THUNDERSTORMS", "label": { "en": "Storming" } },
                            { "id": "SUN", "label": { "en": "Sunny" } },
                            { "id": "WINDY", "label": { "en": "Windy" } }
                        ]
                    }
                ]
            }
        ],
    	"actions": [
        	{
            	"id": "set_auto",
            	"title": {
                	"en": "Set heating to auto",
					"nl": "Automatische verwarming"

            	}
        	},
        	{
            	"id": "set_off",
            	"title": {
                	"en": "Turn heating off",
					"nl": "Zet verwarming af"

            	}
        	}
    	]
    },
    "dependencies": {
        "request": "*"
    }
}
